<div class="container">
  <h1>The Longest Word Game</h1>
  <p><% @grid.each do |letter| %>
    <%= letter %>
    <% end %>

  </p>


  <form action="/score">
    <label for="question">What's your best shot:</label>
    <input type="hidden" name="start_time" value="<%= Time.now.to_i %>">
    <input type="text" id="question" name="attempt" placeholder="word">
    <input type="submit" value="submit!" class="btn btn-danger">
    <input type="hidden" name="grid" value="<%= @grid.join(' ') %>">
  </form>
</div>



